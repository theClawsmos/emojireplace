{
    "manifest_version": 2,
    "name": "Emoji Replacer",
    "version": "1.0",
    "description": "Automatically replace words with relevant emojis",
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    }
  }
  